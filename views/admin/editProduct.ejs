<!-- views/edit-product.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Edit Product</title>
</head>
<style>
  @import url("https://fonts.googleapis.com/css2?family=Alegreya+Sans+SC:ital,wght@0,100;0,300;0,400;0,500;0,700;0,800;0,900;1,100;1,300;1,400;1,500;1,700;1,800;1,900&display=swap");

* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
  font-family: "poppins";
}

body {
  background-color: #121212;
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100vh;
}

.register-container {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100%;
  width: 100%;
}

.register-box {
  background-color: #1c1c1c;
  padding: 15px 15px 30px 15px;
  border-radius: 10px;
  box-shadow: 0 0 10px rgba(0, 0, 0, 0.5);
  text-align: center;
  width: 92vw;
  color: #d4af37;
}

.logo img {
  width: 120px;
  height: 170px;
  object-fit: cover;
}

h1 {
  font-size: 24px;
  font-weight: 400;
  margin-top: 15px;
  line-height: 1;
  text-transform: uppercase;
  font-family: "Alegreya Sans SC", sans-serif;
}

p {
  font-size: 22px;
}

form {
  display: flex;
  flex-direction: column;
  margin: 20px auto 35px auto;
}

input[type="text"],
input[type="number"] {
  background-color: transparent;
  border: none;
  outline: none;
  border-bottom: 1px solid #d4af37;
  padding: 10px;
  margin-bottom: 10px;
  color: #fff;
  font-size: 20px;
}

textarea#description {
  background-color: transparent;
  border: none;
  outline: none;
  border-bottom: 1px solid #d4af37;
  padding: 10px;
  margin-bottom: 10px;
  color: #fff;
  font-size: 20px;
  resize: none;
}

button {
  margin-top: 20px;
  background-color: #d4af37;
  border: none;
  border-radius: 5px;
  padding: 5px 10px;
  color: #1c1c1c;
  font-weight: bold;
  cursor: pointer;
  font-size: 30px;
}

a {
  display: block;
  margin-top: 10px;
  color: #d4af37;
  text-decoration: none;
  font-size: 25px;
}

.two {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 10px;
  font-size: 17px;
  text-transform: uppercase;
}

.two input {
  width: 45%;
}

input[type="file"] {
  font-size: 20px;
  border-radius: 10px;
  margin-top: 10px;
  padding: 0 15px;
  cursor: pointer;
}

.category {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 20px;
  gap: 15px;
  font-size: 17px;
  text-transform: uppercase;
}

.category select {
  font-size: 15px;
  padding: 5px 5px;
  background: transparent;
  color: white;
  border-radius: 5px;
}

.category select option {
  background: #1c1c1c;
  font-size: 20px;
}

/* Chrome, Safari, Edge, Opera */
input[type="number"]::-webkit-outer-spin-button,
input[type="number"]::-webkit-inner-spin-button {
  -webkit-appearance: none;
}

</style>
<body>
  <div class="register-container">
    <div class="register-box">
      <div class="logo">
        <img src="/images/logo.png" alt="Crown Source Logo" />
      </div>
      <h1>Edit Product.</h1>
      <form action="/admin/product/edit/<%= product._id %>" method="post" enctype="multipart/form-data">
        <input
          type="text" 
          name="name"
          placeholder="Enter Product Name"
          required
          value="<%= product.name %>"
        />
        <textarea
          name="description"
          id="description"
          placeholder="Enter Description"
          required
        ><%= product.description %></textarea>
        <div class="two">
          <input type="number" name="price" placeholder="Price" required value="<%= product.price %>" />
          <input type="number" name="stock" placeholder="Stock" required value="<%= product.stock %>" />
        </div>
        <div class="category">
          <label for="category">Category : </label>
          <select id="category" name="category" required>
            <option value="">Select a Category</option>
            <option value="mix" <%= product.category === 'mix' ? 'selected' : '' %>>Mix</option>
            <option value="acp" <%= product.category === 'acp' ? 'selected' : '' %>>Acp</option>
          </select>
        </div>
        <input type="file" accept="image/*" name="image">
        <button type="submit">Update Product</button>
      </form>
    </div>
  </div>
</body>
</html>
