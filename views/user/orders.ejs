<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= user?.username || 'User' %> Orders | Crown Sourcing</title>
    <link rel="stylesheet" href="/styles/partials/flash.css" />
    <link rel="stylesheet" href="/styles/partials/header.css" />
    <link rel="stylesheet" href="/styles/partials/admin-navbar.css" />
</head>
<style>
    * {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
  font-family: "poppins";
}

h1 {
  text-align: center;
  font-size: 1.6rem;
  font-weight: 500;
}

.container {
  max-width: 92vw;
  margin: 10px auto;
  margin-bottom: 110px;
  display: flex;
  flex-direction: column;
  gap: 15px;
}

.orders {
  max-width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
  gap: 10px;
}

.order {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
  gap: 5px;
  background: #313131;
  border-radius: 10px;
  padding: 15px 10px;
}

.top {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-between;
  background: transparent;
}

.top h2 {
  background: #313131;
  font-size: 1.4rem;
  font-weight: 500;
  color: #fff;
}

.top p {
  background: #313131;
  font-size: 1.1rem;
}

strong {
  font-weight: 600;
  background: #313131;
}

.pending {
  color: yellow;
}

.rejected {
  color: red;
}

.approved {
  color: lightgreen;
}

.date {
  width: 100%;
}

.order h3 {
  font-weight: 600;
  font-size: 1.2rem;
  background: #313131;
}

.order table {
  width: 100%;
  border: 1px solid white;
  border-collapse: collapse;
  background: #313131;
}

th,
td {
  border: 1px solid white;
  text-align: center;
  font-size: 16px;
  padding: 3px;
}

th {
  font-size: 20px;
  font-weight: 500;
}

form#limitForm {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 10px;
}

form#limitForm select {
  background: transparent;
  padding: 2px 3px;
  border-radius: 5px;
  color: white;
}

form#limitForm select option {
  background: #1c1c1c;
  font-size: 1rem;
}

.pagination {
  display: flex;
  justify-content: center;
  align-items: center;
}
.pagination a {
  text-decoration: none;
  color: #fff;
  margin: 0 5px;
  padding: 12px 20px;
  border-radius: 50%;
  transition: background-color 0.3s;
}
.pagination a:hover {
  background-color: #f0f0f0;
}
.pagination a.active {
  background-color: #d4af37;
  color: #000;
  pointer-events: none;
}
.pagination a.disabled {
  color: #ccc;
  pointer-events: none;
}
.pagination a.arrow {
  padding: 8px 10px;
}

.end-of-list {
  text-align: center;
}

.end {
  text-align: center;
  color: gray;
  margin-top: 50px;
}

#categoryFilterForm {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 10px;  
}

#categoryFilterForm select {
  background: transparent;
  padding: 2px 3px;
  border-radius: 5px;
  color: white;
}

#categoryFilterForm select option {
  background: #1c1c1c;
  font-size: 1rem;
}
</style>
<body>
    <%- include('../partials/header.ejs') %>
    <%- include('../partials/navbar.ejs') %>
    <%- include('../partials/flash.ejs') %>

    <h1><%= user?.username || 'User' %> Orders</h1>

    <!-- Category Filter Form -->
    <form method="GET" action="/user/orders/<%= user?._id %>" id="categoryFilterForm">
        <label for="category">Filter by Category :</label>
        <select name="category" id="category" onchange="document.getElementById('categoryFilterForm').submit()">
            <option value="">All</option>
            <option value="acp" <%= category === 'acp' ? 'selected' : '' %>>ACP</option>
            <option value="mix" <%= category === 'mix' ? 'selected' : '' %>>Mix</option>
            <!-- Add more options as needed -->
        </select>
        <input type="hidden" name="page" value="<%= currentPage || 1 %>" id="page">
        <input type="hidden" name="limit" value="<%= limit || 10 %>" id="limit">
    </form>

    <% if (orders && orders.length > 0) { %>
        <!-- Orders List -->
        <div class="container">
            <div class="orders">
                <% orders.reverse().forEach((order, index) => { %>
                    <div class="order">
                        <div class="top">
                            <h2>Order No <%= order.userOrderId %></h2> <!-- Display userOrderId instead of calculated index -->
                            <p>
                                <strong>Status : </strong>
                                <span class="<%= order.status.toLowerCase() %>"><%= order.status %></span>
                            </p>
                        </div>
                        <p class="date">
                            <strong>Date:</strong> <%= order.orderDate ? order.orderDate.toDateString() : 'N/A' %>
                        </p>
                        <p>
                            <strong>Category : </strong>
                            <%= order.category === 'acp' ? 'ACP' : (order.category === 'mix' ? 'Mix' : 'Unknown') %>
                            <!-- Adjust as per your category names -->
                        </p>
                        <h3>Products List</h3>
                        <table>
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Name</th>
                                    <th>Qty</th>
                                    <th>Price</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% let totalQty = 0; %>
                                <% order.items?.forEach((item, itemIndex) => { %>
                                    <% totalQty += item.quantity; %>
                                    <tr>
                                        <td><%= itemIndex + 1 %>.</td>
                                        <td><%= item.productId?.name || 'Unknown' %></td>
                                        <td><%= item.quantity %></td>
                                        <td><%= (item.productId?.price * item.quantity) %></td>
                                    </tr>
                                <% }); %>
                                <tr>
                                    <td colspan="2"><strong>Grand Total</strong></td>
                                    <td><strong><%= totalQty %></strong></td>
                                    <td><strong><%= order.total %></strong></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                <% }); %>
            </div>

            <!-- Pagination Controls -->
            <% if (totalPages && totalPages !== 1) { %>
                <div class="pagination">
                    <% if (currentPage > 1) { %>
                        <a href="?page=<%= currentPage - 1 %>&limit=<%= limit %>&category=<%= category %>" class="arrow">« </a>
                    <% } else { %>
                        <a class="arrow disabled">« </a>
                    <% } %>

                    <% for (let i = 1; i <= totalPages; i++) { %>
                        <a href="?page=<%= i %>&limit=<%= limit %>&category=<%= category %>" class="<%= i === currentPage ? 'active' : '' %>"><%= i %></a>
                    <% } %>

                    <% if (currentPage < totalPages) { %>
                        <a href="?page=<%= currentPage + 1 %>&limit=<%= limit %>&category=<%= category %>" class="arrow"> »</a>
                    <% } else { %>
                        <a class="arrow disabled"> »</a>
                    <% } %>
                </div>
            <% } %>
            
            <p class="end-of-list">End of List</p>
        </div>
    <% } else { %>
        <p class="end">You have no orders.</p>
    <% } %>
</body>
</html>
