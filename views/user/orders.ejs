<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= user?.username || 'User' %> Orders | Crown Sourcing</title>
    <link rel="stylesheet" href="/styles/partials/flash.css" />
    <link rel="stylesheet" href="/styles/partials/header.css" />
    <link rel="stylesheet" href="/styles/partials/admin-navbar.css" />
    <link rel="stylesheet" href="/styles/user/orders.css" />
</head>
<body>
    <%- include('../partials/header.ejs') %>
    <%- include('../partials/navbar.ejs') %>
    <%- include('../partials/flash.ejs') %>

    <h1><%= user?.username || 'User' %> Orders</h1>

    <!-- Category Filter Form -->
    <form method="GET" action="/user/orders/<%= user?._id %>" id="categoryFilterForm">
        <label for="category">Filter by Category :</label>
        <select name="category" id="category" onchange="document.getElementById('categoryFilterForm').submit()">
            <option value="">All</option>
            <option value="acp" <%= category === 'acp' ? 'selected' : '' %>>ACP</option>
            <option value="mix" <%= category === 'mix' ? 'selected' : '' %>>Mix</option>
            <!-- Add more options as needed -->
        </select>
        <input type="hidden" name="page" value="<%= currentPage || 1 %>" id="page">
        <input type="hidden" name="limit" value="<%= limit || 10 %>" id="limit">
    </form>

    <% if (orders && orders.length > 0) { %>
        <!-- Orders List -->
        <div class="container">
            <div class="orders">
                <% orders.reverse().forEach((order, index) => { %>
                    <div class="order">
                        <div class="top">
                            <h2>Order No <%= order.userOrderId %></h2> <!-- Display userOrderId instead of calculated index -->
                            <p>
                                <strong>Status : </strong>
                                <span class="<%= order.status.toLowerCase() %>"><%= order.status %></span>
                            </p>
                        </div>
                        <p class="date">
                            <strong>Date:</strong> <%= order.orderDate ? order.orderDate.toDateString() : 'N/A' %>
                        </p>
                        <p>
                            <strong>Category : </strong>
                            <%= order.category === 'acp' ? 'ACP' : (order.category === 'mix' ? 'Mix' : 'Unknown') %>
                            <!-- Adjust as per your category names -->
                        </p>
                        <h3>Products List</h3>
                        <table>
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Name</th>
                                    <th>Qty</th>
                                    <th>Price</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% let totalQty = 0; %>
                                <% order.items?.forEach((item, itemIndex) => { %>
                                    <% totalQty += item.quantity; %>
                                    <tr>
                                        <td><%= itemIndex + 1 %>.</td>
                                        <td><%= item.productId?.name || 'Unknown' %></td>
                                        <td><%= item.quantity %></td>
                                        <td><%= (item.productId?.price * item.quantity) %></td>
                                    </tr>
                                <% }); %>
                                <tr>
                                    <td colspan="2"><strong>Grand Total</strong></td>
                                    <td><strong><%= totalQty %></strong></td>
                                    <td><strong><%= order.total %></strong></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                <% }); %>
            </div>

            <!-- Pagination Controls -->
            <% if (totalPages && totalPages !== 1) { %>
                <div class="pagination">
                    <% if (currentPage > 1) { %>
                        <a href="?page=<%= currentPage - 1 %>&limit=<%= limit %>&category=<%= category %>" class="arrow">« </a>
                    <% } else { %>
                        <a class="arrow disabled">« </a>
                    <% } %>

                    <% for (let i = 1; i <= totalPages; i++) { %>
                        <a href="?page=<%= i %>&limit=<%= limit %>&category=<%= category %>" class="<%= i === currentPage ? 'active' : '' %>"><%= i %></a>
                    <% } %>

                    <% if (currentPage < totalPages) { %>
                        <a href="?page=<%= currentPage + 1 %>&limit=<%= limit %>&category=<%= category %>" class="arrow"> »</a>
                    <% } else { %>
                        <a class="arrow disabled"> »</a>
                    <% } %>
                </div>
            <% } %>
            
            <p class="end-of-list">End of List</p>
        </div>
    <% } else { %>
        <p class="end">You have no orders.</p>
    <% } %>
</body>
</html>
