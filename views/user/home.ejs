<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Home Page | Crown Sourcing</title>
  <link rel="stylesheet" href="/styles/partials/header.css" />
  <link rel="stylesheet" href="/styles/partials/admin-navbar.css" />
  <link rel="stylesheet" href="/styles/partials/flash.css" />
  <!-- Add more stylesheets or meta tags as needed -->
</head>
<style>
  * {
    font-family: "poppins";
  }

  h2 {
    text-align: center;
    font-weight: 500;
  }

  .filter-buttons {
    width: 100%;
    text-align: center;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 10px;
    flex-shrink: 1;
    flex-wrap: wrap;
  }

  .filter-buttons button {
    border: none;
    outline: none;
    font-size: 18px;
    background: #3b3b3b;
    padding: 3px 10px;
    border-radius: 5px;
    text-transform: capitalize;
  }

  .products {
    max-width: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-direction: column;
  }

  .product {
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
    width: 100%;
    gap: 10px;
    margin-bottom: 10px;
  }

  .image {
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
  }

  .image img {
    border-radius: 15px;
    width: 88vw;
    height: 26vh;
    object-fit: cover;
  }

  .no-products p {
    margin-top: 100px;
    text-align: center;
    font-size: 19px;
    color: gray;
  }

  .search-box {
    width: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 10px;
  }

  .search-box input {
    width: 80%;
    padding: 3px 10px;
    border-radius: 5px;
    outline: none;
    font-size: 1.2rem;
    background: transparent;
    border: 1px solid gray;
    color: white;
  }

  .search-box button {
    border: none;
    outline: none;
    background: transparent;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .pagination {
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .pagination a {
    text-decoration: none;
    color: #fff;
    margin: 0 5px;
    padding: 12px 20px;
    border-radius: 50%;
    transition: background-color 0.3s;
  }

  .pagination a:hover {
    background-color: #f0f0f0;
  }

  .pagination a.active {
    background-color: #d4af37;
    color: #000;
    pointer-events: none;
  }

  .pagination a.disabled {
    color: #ccc;
    pointer-events: none;
  }

  .pagination a.arrow {
    padding: 8px 10px;
  }

  .container {
    max-width: 96vw;
    margin: 10px auto;
    margin-bottom: 120px;
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
    gap: 10px;
  }

  .product h3 {
    font-weight: 500;
    font-size: 1.3rem;
  }
</style>

<body>
  <%- include('../partials/header') %>
    <%- include('../partials/navbar') %>
      <%- include('../partials/flash') %>

        <div class="container">
          <h2>Welcome <%= user.username %> ðŸ‘‹</h2>

          <!-- Search Form -->
          <form action="/user" method="get" class="search-box">
            <input type="search" name="search" placeholder="Search products..." value="<%= search %>" />
            <button type="submit">
              <svg xmlns="http://www.w3.org/2000/svg" version="1.1" xmlns:xlink="http://www.w3.org/1999/xlink"
                width="25" height="25" x="0" y="0" viewBox="0 0 612.01 612.01" style="enable-background:new 0 0 512 512"
                xml:space="preserve" class="">
                <g>
                  <path
                    d="M606.209 578.714 448.198 423.228C489.576 378.272 515 318.817 515 253.393 514.98 113.439 399.704 0 257.493 0S.006 113.439.006 253.393s115.276 253.393 257.487 253.393c61.445 0 117.801-21.253 162.068-56.586l158.624 156.099c7.729 7.614 20.277 7.614 28.006 0a19.291 19.291 0 0 0 .018-27.585zM257.493 467.8c-120.326 0-217.869-95.993-217.869-214.407S137.167 38.986 257.493 38.986c120.327 0 217.869 95.993 217.869 214.407S377.82 467.8 257.493 467.8z"
                    fill="#fff" opacity="1" data-original="#000000" class=""></path>
                </g>
              </svg>
            </button>
          </form>

          <!-- Filter Buttons -->
          <div class="filter-buttons">
            <button onclick="filterProducts('all')">All</button>
            <% brands.forEach(brand=> { %>
              <button onclick="filterProducts('<%= brand %>')">
                <%= brand %>
              </button>
              <% }) %>
                <% categories.forEach(category=> { %>
                  <button onclick="filterProducts('<%= category %>')">
                    <%= category %>
                  </button>
                  <% }) %>
          </div>

          <% if (products.length) { %>
            <div class="products">
              <% products.forEach(product=> { %>
                <a href="user/product/<%= product._id %>">
                  <div class="product" data-category="<%= product.category %>" data-brand="<%= product.brand %>">
                    <div class="image">
                      <img
                        src="data:<%= product.image.contentType %>;base64,<%= product.image.data.toString('base64') %>"
                        alt="not found" />
                    </div>
                    <h3>
                      <%= product.name %>
                    </h3>
                  </div>
                </a>
                <% }) %>
            </div>

            <!-- Pagination Controls -->
            <% if (totalPages !==1) { %>
              <div class="pagination">
                <% if (currentPage> 1) { %>
                  <a href="?page=<%= currentPage - 1 %>&limit=<%= limit %>" class="arrow">Â« </a>
                  <% } else { %>
                    <a class="arrow disabled">Â« </a>
                    <% } %>

                      <% for (let i=1; i <=totalPages; i++) { %>
                        <a href="?page=<%= i %>&limit=<%= limit %>" class="<%= i === currentPage ? 'active' : '' %>">
                          <%= i %>
                        </a>
                        <% } %>

                          <% if (currentPage < totalPages) { %>
                            <a href="?page=<%= currentPage + 1 %>&limit=<%= limit %>" class="arrow"> Â»</a>
                            <% } else { %>
                              <a class="arrow disabled"> Â»</a>
                              <% } %>
              </div>
              <% } %>

                <% } else { %>
                  <div class="no-products">
                    <p>Products not Found.</p>
                  </div>
                  <% } %>
        </div>

        <script>
          function filterProducts(category) {
            const products = document.querySelectorAll(".product");
            products.forEach((product) => {
              if (category === "all") {
                product.style.display = "flex";
              } else if (product.dataset.category === category || product.dataset.brand === category) {
                product.style.display = "flex";
              } else {
                product.style.display = "none";
              }
            });
          }
        </script>
</body>

</html>